<div>

	<div class="row">
		{{#if model.length}}
            <div class="col-sm-6">
	            <h3>Videos</h3>
				{{#each video in model}}

			            <div class="card">
			                <div class="avatar">
			                    <img src={{video.img}} alt="" />
			                </div>
			                <div class="content">
			                    <p>{{video.title}}</p>
			                    <p>{{#link-to 'videos' video class="btn btn-warning"}}Watch <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>{{/link-to}}
			                    {{#if video.isInPlayList}}
			                    	<button class="btn btn-warning"> <span class="glyphicon glyphicon-heart" aria-hidden="true"></span></button>
			                    {{else}}
			                       <button class="btn btn-warning" {{action 'addToPlayList' video}}> Add to Playlist  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
			                    {{/if}}	
	
			                    </p>

			                </div>
			            </div>
				  {{/each}}
			</div>
			<div class="col-sm-6">
	            <h3>My PlayList <span>Load from localStorage <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> </span></h3>
				{{#each video in playList}}

			            <div class="card">
			                <div class="avatar">
			                    <img src={{video.img}} alt="" />
			                </div>
			                <div class="content">
			                    <p>{{video.title}}</p>
			                    <p>{{#link-to 'videos' video class="btn btn-warning"}}Watch <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>{{/link-to}}
		 						<button class="btn btn-warning" {{action 'removeFromPlayList' video}}> Remove from Playlist  <span class="glyphicon glyphicon-minus" aria-hidden="true"></span></button>
			                    </p>

			                </div>
			            </div>
				  {{/each}}
			</div>		


        {{else}}
        		<h3>Sorry no videos where found</h3>
		{{/if}}

	</div>


</div>