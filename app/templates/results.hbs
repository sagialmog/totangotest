<div>

	<div class="row">
	  <div class="col-sm-6">
		{{#if model.length}}
	            <h3 class="center-title">Videos</h3>
				{{#each video in model}}

			            <div class="card">
			                <div class="avatar">
			                    <img src={{video.img}} alt="" />
			                </div>
			                <div class="content">
			                    <p>{{video.title}}</p>
			                    <p>{{#link-to 'videos' video class="btn btn-danger"}} <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Watch {{/link-to}}
			                    {{#if video.isInPlayList}}
			                    	<button class="btn btn-danger"> <span class="glyphicon glyphicon-heart" aria-hidden="true"></span></button>
			                    {{else}}
			                       <button class="btn btn-danger" {{action 'addToPlayList' video}}><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add to Playlist  </button>
			                    {{/if}}	
	
			                    </p>

			                </div>
			            </div>
				  {{/each}}
		{{else}}
        	<h3 class="center-title">No results for  "{{querystr}}"</h3>
		{{/if}}
	    </div>

		<div class="col-sm-6">

		{{#if playList.length}}
	            <h3 class="center-title">My playlist</h3>
				{{#each video in playList}}

			            <div class="card">
			                <div class="avatar">
			                    <img src={{video.img}} alt="" />
			                </div>
			                <div class="content">
			                    <p>{{video.title}}</p>
			                    <p>{{#link-to 'videos' video class="btn btn-danger"}}<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Watch {{/link-to}}
		 						<button class="btn btn-danger" {{action 'removeFromPlayList' video}}><span class="glyphicon glyphicon-minus" aria-hidden="true"></span> Remove from Playlist  </button>
			                    </p>

			                </div>
			            </div>
				  {{/each}}
		{{else}}
				<h3 class="center-title">Your playlist is empty</h3>
		{{/if}}
	    </div>	
	
	</div>


</div>